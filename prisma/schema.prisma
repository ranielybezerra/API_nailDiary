// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id        String   @id @default(cuid())
  nome      String
  email     String   @unique
  senha     String
  role      Role     @default(ADMIN)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("usuarios")
}

model Servico {
  id          String   @id @default(cuid())
  nome        String
  descricao   String?
  duracao     Int      // em minutos
  preco       Decimal  @db.Decimal(10, 2)
  icone       String?
  ativo       Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  agendamentos Agendamento[]

  @@map("servicos")
}

model Agendamento {
  id              String            @id @default(cuid())
  clienteNome     String
  clienteEmail    String
  clienteTelefone String
  dataHora        DateTime
  status          StatusAgendamento @default(PENDENTE)
  observacoes     String?
  tokenVerificacao String? @unique // Token único para acesso via link
  pinVerificacao  String?          // PIN de 4 dígitos para verificação
  arquivado       Boolean           @default(false) // Indica se o agendamento foi arquivado
  dataArquivamento DateTime?        // Data em que foi arquivado
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt

  servicoId String
  servico   Servico @relation(fields: [servicoId], references: [id])

  @@map("agendamentos")
}

model Dica {
  id            String   @id @default(cuid())
  titulo        String
  conteudo      String
  dataPublicacao DateTime @default(now())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("dicas")
}

model Configuracao {
  id            String   @id @default(cuid())
  chave         String   @unique
  valor         String   // JSON string para valores complexos
  descricao     String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("configuracoes")
}

enum Role {
  ADMIN
}

enum StatusAgendamento {
  PENDENTE
  CONFIRMADO
  CANCELADO
  CONCLUIDO
}

